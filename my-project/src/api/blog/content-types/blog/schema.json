{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "media_files": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "post": {
      "type": "richtext",
      "required": true
    },
    "link": {
      "type": "string"
    },
    "portfolio": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::portfolio.portfolio"
    }
  }
}
